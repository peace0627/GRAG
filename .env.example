# =============================================================================
# GraphRAG Project Configuration (.env)
# =============================================================================
# 複製此文件到 .env 並填入實際值

# =============================================================================
# Knowledge Graph Database (Neo4j) - 用於存儲知識圖譜和實體關係
# =============================================================================
# Neo4j 數據庫連接 URI
NEO4J_URI=neo4j://localhost:7687
# Neo4j 用戶名 (預設: neo4j)
NEO4J_USER=neo4j
# Neo4j 密碼
NEO4J_PASSWORD=password123

# =============================================================================
# Vector Database (Supabase pgvector) - 用於向量搜索和語義匹配
# =============================================================================
# Supabase 項目 URL
SUPABASE_URL=https://your-project-url.supabase.co
# Supabase 匿名/公開金鑰
SUPABASE_KEY=your-supabase-anon-key

# =============================================================================
# Vision Language Model (VLM) - 用於多模態文檔分析和圖表理解
# =============================================================================
# OpenAI GPT-4V API 金鑰 (推薦用於高品質視覺分析)
OPENAI_API_KEY=your-openai-api-key
# Qwen2VL API 端點 URL (阿里雲兼容接口)
QWEN2VL_BASE_URL=https://api.qwen2vl.com
# Qwen2VL API 金鑰
QWEN2VL_API_KEY=your-qwen2vl-api-key
# Ollama 本地VLM服務 (可選，預設 localhost:11434)
OLLAMA_BASE_URL=http://localhost:11434/v1
OLLAMA_API_KEY=ollama
OLLAMA_MODEL=qwen3-vl:235b-cloud                    # 常用的視覺模型: llava, moondream, etc

# =============================================================================
# Language Models (LLM) - 用於文本生成和推理 (將來集成)
# =============================================================================
# LLM 相關配置將在此添加

# =============================================================================
# Application Settings - 應用程序通用設置
# =============================================================================
# 調試模式 (開發環境: 1, 生產環境: 0)
DEBUG=1
# 知識區段 ID (用於知識隔離)
KNOWLEDGE_AREA_ID=default_area
# 日誌級別 (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# =============================================================================
# Processing Configuration - 文檔處理參數設定
# =============================================================================
# 文本分塊參數
CHUNK_SIZE=512
CHUNK_OVERLAP=50
INCLUDE_VISUAL_CHUNKS=True

# 嵌入模型供應商配置
EMBEDDING_PROVIDER=sentence_transformers       # sentence_transformers|openai|cohere|huggingface
EMBEDDING_API_KEY=your-api-key                 # 雲端供應商的API key
EMBEDDING_BASE_URL=https://api.openai.com/v1   # 自定義API endpoint (選用)
EMBEDDING_MODEL=all-MiniLM-L6-v2              # 模型名稱
EMBEDDING_DIMENSION=384                        # 向量維度

# 知識提取參數
EXTRACT_ENTITIES=True
EXTRACT_RELATIONS=True
EXTRACT_EVENTS=True
MIN_ENTITY_CONFIDENCE=0.5

# =============================================================================
# File Upload Settings - 文件上傳相關設置
# =============================================================================
# 上傳文檔的基本路徑
UPLOAD_BASE_PATH=./uploads
# 上傳文件的最大大小 (MB)
MAX_FILE_SIZE_MB=50
